@using PierreVendor.Models;

<h3> Vendor List </h3>

@if (@Model.Count == 0)
{
    <h3>No vendors yet. <a href ="/vendor/new">Add a new vendor</a></h3>
}
<ul>
    @foreach (Vendor vendor in Model)
    {
        <li>
            <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
        </li>
    }
</ul>

<p><a href='/'>Retun Home</a></p>