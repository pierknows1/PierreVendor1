@{
  Layout = "_Layout";
}

@using PierreVendor.Models;

<h2>Vendor: </h2>
<h3>@Model["vendor"].Name</h3>
<h2>Description:</h3>
<h4>@Model["vendor"].Description</h4>
<h2>Orders:</h3>

<ol>
  @foreach (Order order in @Model["orders"])
  {
    <li>
      <a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a>
    </li>
  }
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add order</a></p>
<p><a href='/vendors'>Vendor List</a></p>
<p><a href='/'>Home</a></p>